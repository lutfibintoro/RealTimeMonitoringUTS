@{
	ViewData["Title"] = "Home";
}

<link rel="stylesheet" href="~/css/Home/Index.css" asp-append-version="true" />

<div style="width: 100%;">
	<h1>Welcome</h1>
	<p>Git Repository <a href="https://github.com/lutfibintoro/RealTimeMonitoringUTS">building Web apps with ASP.NET Core</a>.</p>
</div>

<!-- Date and Time Display -->
<div class="date-time-box" style="width: 100%;">
	<div id="clock"></div>
	<div id="date"></div>
</div>

<!-- Statistics Cards -->
<div class="stats-container" style="width: 100%;">
	<div class="stat-card online">
		<h3>Helm Online</h3>
		<span id="onlineCount">1</span>
	</div>

	<div class="stat-card offline">
		<h3>Helm Offline</h3>
		<span id="offlineCount">2</span>
	</div>

	<div class="stat-card danger">
		<h3>Alert Bahaya</h3>
		<span id="dangerCount">0</span>
	</div>

	<div class="stat-card total">
		<h3>Total Helm</h3>
		<span id="totalCount">2</span>
	</div>
</div>

<!-- Charts Container -->
<div class="charts-container">
	<div class="chart-card">
		<h3>🌡️ Temperatur Helm</h3>
		<canvas id="temperatureChart"></canvas>
	</div>
	<div class="chart-card">
		<h3>💧 Humidity Helm</h3>
		<canvas id="humidityChart"></canvas>
	</div>
	<div class="chart-card">
		<h3>⚡ Status Helm</h3>
		<canvas id="statusChart"></canvas>
	</div>
	<div class="chart-card">
		<h3>🔥 Metana Levels</h3>
		<canvas id="methaneChart"></canvas>
	</div>
	<div class="chart-card">
		<h3>🚀 Akselerasi X-Y-Z</h3>
		<canvas id="accelerationChart"></canvas>
	</div>
	<div class="chart-card">
		<h3>💨 Gas Levels (Smoke & LPG)</h3>
		<canvas id="gasChart"></canvas>
	</div>
</div>

<!-- Helmet Data Table -->
<table class="helmet-table">
	<thead>
		<tr>
			<th>Helm</th>
			<th>Nama Pekerja</th>
			<th>Lokasi Area Tambang</th>
			<th>Temperatur (°C)</th>
			<th>Humidity (%)</th>
			<th>Metana (CH₄)</th>
			<th>Hydrogen (H₂)</th>
			<th>Smoke</th>
			<th>LPG Gas</th>
			<th>Alcohol Gas</th>
			<th>Akselerasi X</th>
			<th>Akselerasi Y</th>
			<th>Akselerasi Z</th>
		</tr>
	</thead>
	<tbody id="helmetData">
		<!-- Data akan di-update otomatis -->
	</tbody>
</table>

<!-- Developer Profiles Section -->
<div class="developer-profiles-container">
	<div id="judul">
		<h1>Developer Profiles</h1>
	</div>
	<div class="container">
		<div class="profile-card">
			<img src="https://picsum.photos/150/150?random=1" alt="Afrizal Rizky" class="profile-img">
			<h2>Afrizal Rizky</h2>
			<p>UI/UX and Frontend Developer</p>
		</div>
		<div class="profile-card">
			<img src="https://picsum.photos/150/150?random=2" alt="Lutfi Bintoro" class="profile-img">
			<h2>Lutfi Bintoro</h2>
			<p>Backend Developer</p>
		</div>
		<div class="profile-card">
			<img src="https://picsum.photos/150/150?random=3" alt="Andreas Kiew" class="profile-img">
			<h2>Andreas Kiew</h2>
			<p>Hardware and Electrical Engineer</p>
		</div>
	</div>
</div>

@section Scripts {
	<script src="https://cdn.jsdelivr.net/npm/chart.js"></script>
	<script src="~/js/Home/Index.js" asp-append-version="true"></script>
}